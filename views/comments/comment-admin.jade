table.comments-list.table.table-striped.table-bordered.table-condensed
  thead
    tr
      th Text
      th Name
      th Method
      th Username/Email
      th CreatedAt
      th(colspan='2') Actions
  tbody
    - each comment in comments
      tr
        td.comment-text!= comment.text
        td #{comment.name}
        td #{comment.method}
        td #{comment.identifier}
        td #{comment.formattedDate}
        td.action
          - if (comment.approved == true)
            label 
              input(type='checkbox', name='#{comment._id}', value="Disapprove")
              span.label Disapprove
          -else
            label 
              input(type='checkbox', name='#{comment._id}', value="Approve")
              span.label Approve
        td.action
          label 
            input(type='checkbox', name='#{comment._id}', value="Delete")
            span.label Delete